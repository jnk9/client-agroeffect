<div class="">
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui teal image header">
        <%= inline_svg 'logo-2', class: 'logo' %>
        <div class="content">
          Iniciar Sesi√≥n
        </div>
      </h2>
      <% flash.each do |key, value| %>
        <div class="ui message <%= flash_class(key) %> closable">
          <i class="close icon"></i>
          <%= value %>
        </div>
      <% end %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui large form' }) do |f| %>
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>
          <div class="action">
          <%= f.submit 'Ingresar', class:'ui fluid large teal button' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
